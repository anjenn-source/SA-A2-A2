<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="402dp"
        android:layout_height="313dp"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/popupbg"
        android:orientation="vertical">

        <TextView
            android:layout_width="264dp"
            android:layout_height="60dp"
            android:layout_margin="10sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="10sp"
            android:text="How to Use?"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:text="Welcome to Trip Genie, your ultimate travel companion! Discover and explore top travel destinations with detailed descriptions, ratings, amenities, and stunning visuals. \n \n Start your adventure today with Trip Genie!  ✈️"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp" />

        <TextView
            android:id="@+id/popupclose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="30sp"
            android:padding="5dp"
            android:text="Let's Book!"
            android:textColor="@color/yellow"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>



</RelativeLayout>